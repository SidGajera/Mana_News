<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:textColor="@color/white"
        android:id="@+id/txtCommentDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/cerebrisan_light"
        android:text="comment description"
        android:textSize="@dimen/text_font_news_desc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgUserProfile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:src="@drawable/app_icon"
                app:civ_border_width="1dp"
                android:scaleType="centerCrop"
                app:civ_border_color="@color/white"/>

            <TextView
                android:id="@+id/txtImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_corner"
                android:fontFamily="@font/cerebricans_bold"
                android:gravity="center"
                android:text="A"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:textColor="@color/darkDray"
                android:textSize="22sp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_marginLeft="3dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_weight="1"
                android:text="txtUserName"
                android:fontFamily="@font/cerebrisans_medium"
                android:textColor="@color/yellow"
                android:textSize="14sp" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/txtCommentTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="top"
                android:fontFamily="@font/cerebrisan_light"
                android:text="txtCommentDay"
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>