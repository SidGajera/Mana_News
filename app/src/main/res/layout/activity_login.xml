<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="false"
    android:focusableInTouchMode="true"
    tools:context=".Activity.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linTop"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/yellow">

                <ImageView
                    android:id="@+id/imgClose"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_close_24"
                    android:tint="@color/darkDray" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/darkDray"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="50dp"
                        android:src="@drawable/app_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="15dp"
                        android:fontFamily="@font/cerebrisan_light"
                        android:text="Proceed with your"
                        android:id="@+id/txtproceed"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_font_news_title" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:fontFamily="@font/cerebrisans_medium"
                        android:text="Login"
                        android:id="@+id/txtTitLogin"
                        android:textColor="@color/yellow"
                        android:textSize="22sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTitmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cerebrisan_light"
                        android:text="Email"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_font_news_title" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgEmail"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:tint="@color/yellow"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_email" />

                        <EditText
                            android:id="@+id/edtEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:textColor="@color/white"
                            android:layout_marginLeft="5dp"
                            android:maxLines="1"
                            android:inputType="textEmailAddress"
                            android:lines="1"
                            android:fontFamily="@font/cerebrisan_light"
                            android:hint="Enter email address"
                            android:textColorHint="@color/color_gray"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/text_font_news_desc" />
                    </LinearLayout>

                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="3dp"
                        android:background="@color/yellow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTitPass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_font_news_title" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgPass"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:tint="@color/yellow"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_password" />

                        <EditText
                            android:id="@+id/edtPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:fontFamily="@font/cerebrisan_light"
                            android:hint="Enter password"
                            android:inputType="textPassword"
                            android:textColor="@color/white"
                            android:layout_marginLeft="5dp"
                            android:maxLines="1"
                            android:lines="1"
                            android:textColorHint="@color/color_gray"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/text_font_news_desc" />
                    </LinearLayout>

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="3dp"
                        android:background="@color/yellow" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linLogin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/btn_login_yellow">

                    <TextView
                        android:id="@+id/txtLogin_"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/cerebricans_bold"
                        android:gravity="center"
                        android:text="Login"
                        android:textColor="@color/darkDray"
                        android:textSize="15.5sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtDontHaveAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cerebrisan_light"
                        android:text="Don't have account ? "
                        android:textColor="@color/color_gray"
                        android:textSize="@dimen/text_font_news_title" />

                    <TextView
                        android:id="@+id/txtCreateNewOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cerebrisans_medium"
                        android:text="Register"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/text_font_news_title" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>