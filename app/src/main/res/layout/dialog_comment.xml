<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linCommet"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_comment_dark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitComment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/cerebrisans_medium"
            android:gravity="center"
            android:text="Add Comment"
            android:textColor="@color/yellow"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/relComment"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_gray">

            <EditText
                android:id="@+id/edtComment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@null"
                android:fontFamily="@font/cerebrisan_light"
                android:gravity="start"
                android:textCursorDrawable="@null"
                android:hint="Comment here"
                android:textColor="@color/white"
                android:textColorHint="@color/grayCat"
                android:textSize="14sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCancle"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="@drawable/button_no"
                android:fontFamily="@font/cerebrisans_regular"
                android:gravity="center_vertical|center"
                android:text="Cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/text_font_news_title" />

            <TextView
                android:id="@+id/txtSend"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:background="@drawable/button_yes"
                android:fontFamily="@font/cerebrisans_medium"
                android:gravity="center|center_vertical"
                android:text="Send"
                android:textColor="@color/darkDray"
                android:textSize="@dimen/text_font_news_title" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>