<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rel_main2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linItem2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/relay_Bott"
            android:layout_marginTop="0dp"
            android:background="@color/darkDray"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layitem2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/blurImageview2"
                        android:layout_width="match_parent"
                        android:layout_height="195dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/dummy_blur"
                        android:transitionName="simple_activity_transition" />

                    <ImageView
                        android:id="@+id/imageview2"
                        android:layout_width="match_parent"
                        android:layout_height="195dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher"
                        android:transitionName="simple_activity_transition" />

                    <ImageView
                        android:id="@+id/img_play2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_playforvid"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/img_playurL2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_youtube"
                        android:visibility="gone" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_short_desc2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:autoLink="web"
                        android:ellipsize="end"
                        android:fontFamily="@font/cerebrisans_medium"
                        android:gravity="start"
                        android:lineSpacingExtra="3dp"
                        android:text="Short description"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/text_font_news_title" />

                    <ImageView
                        android:id="@+id/imgShareM2"
                        android:layout_width="28dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_baseline_share_24"
                        android:visibility="gone"
                        app:tint="@color/yellow" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_description2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_short_desc"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginBottom="0dp"
                    android:ellipsize="end"
                    android:enabled="true"
                    android:fontFamily="@font/cerebrisans_regular"
                    android:gravity="start"
                    android:lineSpacingExtra="8dp"
                    android:scrollbars="none"
                    android:text="Description"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_font_news_desc"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linRef2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/txtRef2"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@id/txtNewsDate"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/cerebrisans_medium"
                        android:text="Reference by"
                        android:textColor="@color/yellow"
                        android:gravity="bottom"
                        android:textSize="12sp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/txtNewsDate2"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/cerebrisans_medium"
                        android:text="News date"
                        android:gravity="top"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:visibility="invisible" />

                </LinearLayout>

<!--                <ImageView-->
<!--                    android:id="@+id/imgWaterMark2"-->
<!--                    android:layout_width="200dp"-->
<!--                    android:layout_height="35dp"-->
<!--                    android:layout_gravity="bottom|end"-->
<!--                    android:layout_marginRight="15dp"-->
<!--                    android:layout_marginBottom="10dp"-->
<!--                    android:src="@drawable/app_icon"-->
<!--                    android:visibility="visible" />-->

                <LinearLayout
                    android:id="@+id/linAppIcon2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/imgWaterMark2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/app_icon"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtWaterMark"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/app_name"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgAppIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="177dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/linItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/relay_Bott"
            android:background="@color/darkDray"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layitem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/blurImageview"
                        android:layout_width="match_parent"
                        android:layout_height="195dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/dummy_blur"
                        android:transitionName="simple_activity_transition" />

                    <ImageView
                        android:id="@+id/imageview"
                        android:layout_width="match_parent"
                        android:layout_height="195dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_launcher"
                        android:transitionName="simple_activity_transition" />

                    <ImageView
                        android:id="@+id/img_play"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_playforvid"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/img_playurL"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_youtube"
                        android:visibility="gone" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_short_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:autoLink="web"
                        android:ellipsize="end"
                        android:fontFamily="@font/cerebrisans_medium"
                        android:gravity="start"
                        android:lineSpacingExtra="5dp"
                        android:text="Short description"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/text_font_news_title" />

                    <ImageView
                        android:id="@+id/imgShareM"
                        android:layout_width="28dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_baseline_share_24"
                        android:visibility="visible"
                        app:tint="@color/yellow" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_short_desc"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginBottom="0dp"
                    android:ellipsize="end"
                    android:enabled="true"
                    android:fontFamily="@font/cerebrisans_regular"
                    android:gravity="start"
                    android:lineSpacingExtra="8dp"
                    android:scrollbars="none"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum."
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_font_news_desc"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linRef"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/txtRef"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/txtNewsDate"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/cerebrisans_medium"
                        android:text="Reference by"
                        android:textColor="@color/yellow"
                        android:textSize="12sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtNewsDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/cerebrisans_medium"
                        android:text="News date"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>