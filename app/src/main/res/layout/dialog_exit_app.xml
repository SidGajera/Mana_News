<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linExit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="250dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/flotingDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_exit"
                android:tint="@color/darkDray"
                android:backgroundTint="@color/yellow"
                android:visibility="visible"
                app:backgroundTint="@color/darkDray"
                app:fabSize="auto" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:src="@drawable/ic_exit"
                android:tint="@color/white"
                android:visibility="gone"
                app:backgroundTint="@color/darkDray"
                app:fabSize="normal" />

        </RelativeLayout>

        <TextView
            android:id="@+id/txtExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/cerebrisans_medium"
            android:gravity="center_vertical|center"
            android:text="Exit"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_font_main_title" />

        <TextView
            android:id="@+id/txtExitMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/cerebrisans_regular"
            android:gravity="center_vertical|center"
            android:text="Are you sure you want to exit ?"
            android:textColor="@color/white"
            android:textSize="@dimen/text_font_news_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_no"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_no"
                android:gravity="center_vertical|center"
                android:text="No"
                android:padding="10dp"
                android:fontFamily="@font/cerebrisans_regular"
                android:textColor="@color/white"
                android:textSize="@dimen/text_font_news_title" />

            <TextView
                android:id="@+id/tx_yes"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/cerebrisans_medium"
                android:background="@drawable/button_yes"
                android:gravity="center|center_vertical"
                android:text="Exit"
                android:textColor="@color/darkDray"
                android:textSize="@dimen/text_font_news_title" />


        </LinearLayout>

        <!--android:background="#B7C6C4CA"-->
    </LinearLayout>


</LinearLayout>