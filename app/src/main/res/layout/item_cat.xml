<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lay_bussiness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lay_cat"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_category"
                android:layout_width="25dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/txt_catName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="17dp"
                android:layout_toEndOf="@id/img_category"
                android:layout_weight="1"
                android:fontFamily="@font/cerebrisan_light"
                android:gravity="center_vertical"
                android:text="Bussiness"
                android:textColor="@color/white"
                android:textSize="@dimen/text_font_news_title" />

            <ImageView
                android:id="@+id/imgNext"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@+id/txt_catName"
                android:src="@drawable/ic_baseline_next" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>