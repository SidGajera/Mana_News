<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relayFull"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.SplashScreen_Activity">
    <!--android:background="@drawable/ic_spash_dark"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtSplashTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cerebricans_bold"
            android:gravity="center"
            android:text="@string/splash_title"
            android:textColor="@color/yellow"
            android:textSize="@dimen/text_font_splash_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSplashSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cerebrisans_regular"
            android:gravity="center"
            android:text="@string/splash_subtitle"
            android:textColor="@color/white"
            android:textSize="@dimen/text_font_splash_subtitle" />

    </LinearLayout>
</RelativeLayout>